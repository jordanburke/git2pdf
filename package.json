{
  "name": "git2pdf",
  "version": "2.3.7",
  "description": "A CLI tool for generating a PDF document from a GitHub repository",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "git2pdf": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "validate": "pnpm format && pnpm lint && pnpm test && pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=json --outputFile=./coverage/coverage.json",
    "test:ui": "vitest --ui",
    "build": "rimraf dist && cross-env NODE_ENV=production tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm validate",
    "ts-types": "tsc",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/git2pdf.git"
  },
  "keywords": [
    "github",
    "repository",
    "pdf",
    "clone",
    "nodejs",
    "convert",
    "document",
    "langchain",
    "openai",
    "chatgpt",
    "utility",
    "tool"
  ],
  "author": "Jordan Burke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jordanburke/git2pdf/issues"
  },
  "homepage": "https://github.com/jordanburke/git2pdf#readme",
  "documentation": "https://github.com/jordanburke/git2pdf#readme",
  "contributors": [
    {
      "name": "BankkRoll",
      "url": "https://github.com/BankkRoll"
    },
    {
      "name": "malpou",
      "url": "https://github.com/malpou"
    },
    {
      "name": "LucasionGS",
      "url": "https://github.com/LucasionGS"
    },
    {
      "name": "jbirbal-skydom",
      "url": "https://github.com/jbirbal-skydom"
    }
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "highlight.js": "^11.11.1",
    "html-entities": "^2.6.0",
    "inquirer": "^9.3.8",
    "isbinaryfile": "^5.0.6",
    "ora": "^9.0.0",
    "pdfkit": "^0.17.2",
    "prettier": "^3.6.2",
    "simple-git": "^3.28.0",
    "strip-comments": "^2.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^22.18.11",
    "@types/pdfkit": "^0.17.3",
    "@types/strip-comments": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
